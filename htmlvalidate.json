{
  "extends": ["html-validate:recommended"],
  "rules": {
    "no-inline-style": "off",
    "require-sri": "off",
    "no-trailing-whitespace": "warn",
    "void-style": ["error", { "style": "selfclose" }],
    "attribute-boolean-style": "off",
    "no-implicit-close": "off",
    "element-permitted-content": "warn",
    "wcag/h30": "warn",
    "wcag/h32": "warn",
    "wcag/h36": "warn",
    "wcag/h37": "warn",
    "wcag/h67": "warn",
    "wcag/h71": "warn"
  }
}
